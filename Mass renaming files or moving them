#!/bin/bash

#Two solutions, the first one is too complicated 

n=1
lsa=$( ls )
wcw=$( ls | wc -w )

until [[ "$n" -gt "$wcw" ]] ; do
     lsb=$( echo "$lsa" | cut -d$'\n' -f$n  )
     mv "$lsb" "name$n" #can add path berore second var or move without renaming by adding path and changing second var and name to first var

     ((n++))
done

# a more efficient way of doing it would be:

n=1
for file in ./*; do
  mv "$file" "./name$n"
  ((n++))
done
